<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorBackground"
    android:layout_marginBottom="@dimen/custom_padding"
    android:paddingBottom="@dimen/custom_padding"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="1sp"
        android:layout_margin="@dimen/custom_padding"/>

    <ImageView
        android:id="@+id/list_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_text"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/list_item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/custom_padding"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/header_font_size"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/list_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/custom_padding"
        android:paddingVertical="@dimen/custom_padding"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/text_font_size" />

    <TextView
        android:id="@+id/list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/custom_padding" />
</LinearLayout>